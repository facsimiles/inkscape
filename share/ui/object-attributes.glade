<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <object class="GtkGrid">
    <property name="name">text-main</property>
    <property name="row-spacing">4</property>
    <property name="column-spacing">4</property>
    <child>
      <placeholder/>
    </child>
  </object>

  <object class="GtkBox" id="ellipse-main">
    <property name="spacing">4</property>
    <property name="hexpand">False</property>
    <property name="halign">start</property>
    <child>
      <object class="GtkToggleButton" id="el-slice">
        <property name="focusable">True</property>
        <property name="receives-default">True</property>
        <property name="tooltip-text" translatable="yes">Switch to slice (closed shape with two radii)</property>
        <property name="icon-name">draw-ellipse-segment</property>
      </object>
    </child>
    <child>
      <object class="GtkToggleButton" id="el-arc">
        <property name="focusable">True</property>
        <property name="receives-default">True</property>
        <property name="tooltip-text" translatable="yes">Switch to arc (unclosed shape)</property>
        <property name="group">el-slice</property>
        <property name="icon-name">draw-ellipse-arc</property>
      </object>
    </child>
    <child>
      <object class="GtkToggleButton" id="el-chord">
        <property name="focusable">True</property>
        <property name="receives-default">True</property>
        <property name="tooltip-text" translatable="yes">Switch to chord (closed shape)</property>
        <property name="group">el-slice</property>
        <property name="icon-name">draw-ellipse-chord</property>
      </object>
    </child>
    <child>
      <object class="GtkSeparator">
        <property name="margin-start">3</property>
        <property name="margin-end">3</property>
        <property name="orientation">vertical</property>
      </object>
    </child>
    <child>
      <object class="GtkButton" id="el-whole">
        <property name="focusable">True</property>
        <!--            <property name="visible">False</property>-->
        <property name="receives-default">True</property>
        <property name="tooltip-text" translatable="yes">Make the shape a whole ellipse, not arc or segment</property>
        <property name="icon-name">draw-ellipse-whole</property>
      </object>
    </child>
  </object>

  <object class="GtkBox" id="rect-main">
    <property name="spacing">4</property>
    <child>
      <object class="GtkButton" id="rect-sharp">
        <property name="focusable">True</property>
        <property name="receives-default">True</property>
        <property name="tooltip-text" translatable="yes">Make corners sharp</property>
        <property name="halign">start</property>
        <property name="valign">start</property>
        <property name="icon-name">rectangle-make-corners-sharp</property>
      </object>
    </child>
    <child>
      <object class="GtkSeparator">
        <property name="margin-start">3</property>
        <property name="margin-end">3</property>
        <property name="orientation">vertical</property>
      </object>
    </child>
    <child>
      <object class="GtkButton" id="rect-corners">
        <property name="focusable">True</property>
        <property name="receives-default">True</property>
        <property name="tooltip-text" translatable="yes">Make corners independent (path effect)</property>
        <property name="halign">start</property>
        <property name="valign">start</property>
        <property name="icon-name">rectangle-make-corners-round</property>
      </object>
    </child>
    <layout>
      <property name="column">1</property>
      <property name="row">4</property>
    </layout>
  </object>

  <object class="GtkGrid" id="star-main">
    <property name="row-spacing">4</property>
    <property name="column-spacing">4</property>
    <child>
      <object class="GtkBox">
        <property name="spacing">4</property>
        <child>
          <object class="GtkToggleButton" id="star-poly">
            <property name="focusable">True</property>
            <property name="receives-default">True</property>
            <property name="tooltip-text" translatable="yes">Regular polygon (with one handle) instead of a star
            </property>
            <property name="icon-name">draw-polygon</property>
          </object>
        </child>
        <child>
          <object class="GtkToggleButton" id="star-star">
            <property name="focusable">True</property>
            <property name="receives-default">True</property>
            <property name="tooltip-text" translatable="yes">Star instead of a regular polygon (with one handle)
            </property>
            <property name="group">star-poly</property>
            <property name="icon-name">draw-star</property>
          </object>
        </child>
        <child>
          <object class="GtkSeparator">
            <property name="margin-start">3</property>
            <property name="margin-end">3</property>
            <property name="orientation">vertical</property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="star-align">
            <property name="focusable">True</property>
            <property name="receives-default">True</property>
            <property name="tooltip-text" translatable="yes">Level shape</property>
            <property name="icon-name">object-level</property>
          </object>
        </child>
        <layout>
          <property name="column">1</property>
          <property name="row">0</property>
        </layout>
      </object>
    </child>
  </object>

  <object class="GtkGrid" id="path-main">
    <property name="row-spacing">4</property>
    <property name="column-spacing">4</property>
    <property name="margin-start">2</property>
    <child>
      <object class="GtkLabel">
        <property name="halign">start</property>
        <property name="margin-top">4</property>
        <property name="label" translatable="yes">Path data</property>
        <layout>
          <property name="column">0</property>
          <property name="row">4</property>
          <property name="column-span">4</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="GtkLabel" id="path-info">
        <property name="valign">center</property>
        <property name="xalign">0</property>
        <layout>
          <property name="column">0</property>
          <property name="row">6</property>
          <property name="column-span">2</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="GtkScrolledWindow" id="path-data-wnd">
        <property name="height-request">80</property>
        <property name="focusable">True</property>
        <property name="hexpand">True</property>
        <property name="has-frame">True</property>
        <property name="child">
          <object class="GtkViewport">
            <child>
              <placeholder/>
            </child>
          </object>
        </property>
        <layout>
          <property name="column">0</property>
          <property name="row">5</property>
          <property name="column-span">4</property>
        </layout>
      </object>
    </child>
    <child>
      <object class="GtkBox">
        <property name="halign">end</property>
        <property name="spacing">10</property>
        <child>
          <object class="GtkBox" id="rounding-box">
            <child>
              <object class="GtkButton" id="path-data-round">
                <property name="focusable">True</property>
                <property name="receives-default">True</property>
                <property name="tooltip-text" translatable="yes">Round selected numbers to n digits</property>
                <property name="use-underline">True</property>
                <property name="icon-name">rounding</property>
              </object>
            </child>
            <child>
              <object class="GtkMenuButton" id="path-menu">
                <property name="focusable">True</property>
                <property name="focus-on-click">False</property>
                <property name="receives-default">True</property>
                <property name="margin-start">2</property>
                <property name="has-frame">False</property>
                <property name="menu-model">menu1</property>
                <child>
                  <object class="GtkBox">
                    <property name="margin-start">2</property>
                    <property name="margin-end">2</property>
                    <child>
                      <object class="GtkLabel" id="path-precision">
                        <property name="width-chars">8</property>
                        <property name="xalign">0</property>
                      </object>
                    </child>
                    <child>
                      <object class="GtkImage">
                        <property name="icon-name">pan-down-symbolic</property>
                        <style>
                          <class name="arrow"/>
                        </style>
                      </object>
                    </child>
                  </object>
                </child>
                <style>
                  <class name="menu-btn-tight"/>
                </style>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="path-enter">
            <property name="focusable">True</property>
            <property name="receives-default">True</property>
            <property name="tooltip-text" translatable="yes">Press Shift+Enter to commit editing changes</property>
            <property name="halign">end</property>
            <property name="icon-name">enter</property>
          </object>
        </child>
        <layout>
          <property name="column">1</property>
          <property name="row">6</property>
          <property name="column-span">3</property>
        </layout>
      </object>
    </child>
    <child>
      <placeholder/>
    </child>
  </object>

  <object class="GtkBox" id="main-widget">
    <property name="margin-start">4</property>
    <property name="margin-end">4</property>
    <property name="margin-top">4</property>
    <property name="margin-bottom">4</property>
    <property name="orientation">vertical</property>
    <property name="spacing">1</property>
    <child>
      <object class="GtkBox" id="main-header">
        <property name="valign">start</property>
        <property name="hexpand">True</property>
        <property name="spacing">0</property>
        <child>
          <object class="GtkLabel" id="main-obj-name">
            <property name="margin-start">2</property>
            <property name="halign">start</property>
            <property name="valign">center</property>
            <property name="hexpand">True</property>
            <property name="label">label</property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="main-obj-visible">
            <property name="focusable">True</property>
            <property name="receives-default">True</property>
            <property name="tooltip-text" translatable="yes">Show/hide object</property>
            <property name="icon-name">object-visible</property>
            <property name="has-frame">False</property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="main-obj-locked">
            <property name="focusable">True</property>
            <property name="receives-default">True</property>
            <property name="tooltip-text" translatable="yes">Lock object to prevent selection by mouse</property>
            <property name="icon-name">object-unlocked</property>
            <property name="has-frame">False</property>
          </object>
        </child>

      </object>
    </child>
    <child>
      <object class="GtkBox" id="paint-box">
        <property name="orientation">vertical</property>
        <property name="hexpand">True</property>
        <property name="spacing">4</property>
      </object>
    </child>
    <child>
      <object class="GtkBox" id="main-panel">
        <property name="hexpand">True</property>
      </object>
    </child>
    <child>
      <object class="GtkSeparator" id="main-separator">
        <property name="margin-top">4</property>
      </object>
    </child>
  </object>

  <menu id="menu1">
    <section>
      <item>
        <attribute name="label" translatable="yes" context="Precision"
                   comments="This symbolizes precision of 0 digits after the decimal separator.">N
        </attribute>
        <attribute name="action">attrdialog.precision</attribute>
        <attribute name="target" type="i">0</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes" context="Precision"
                   comments="This symbolizes precision of 1 digit after the decimal separator. Please adjust to your language's number format (e.g. N,N).">
          N.N
        </attribute>
        <attribute name="action">attrdialog.precision</attribute>
        <attribute name="target" type="i">1</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes" context="Precision"
                   comments="This symbolizes precision of 2 digits after the decimal separator. Please adjust to your language's number format (e.g. N,NN).">
          N.NN
        </attribute>
        <attribute name="action">attrdialog.precision</attribute>
        <attribute name="target" type="i">2</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes" context="Precision"
                   comments="This symbolizes precision of 3 digits after the decimal separator. Please adjust to your language's number format (e.g. N,NNN).">
          N.NNN
        </attribute>
        <attribute name="action">attrdialog.precision</attribute>
        <attribute name="target" type="i">3</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes" context="Precision"
                   comments="This symbolizes precision of 4 digits after the decimal separator. Please adjust to your language's number format (e.g. N,NNNN).">
          N.NNNN
        </attribute>
        <attribute name="action">attrdialog.precision</attribute>
        <attribute name="target" type="i">4</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes" context="Precision"
                   comments="This symbolizes precision of 5 digits after the decimal separator. Please adjust to your language's number format (e.g. N,NNNNN).">
          N.NNNNN
        </attribute>
        <attribute name="action">attrdialog.precision</attribute>
        <attribute name="target" type="i">5</attribute>
      </item>
    </section>
  </menu>
</interface>
